<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/illustrationImageView"
        android:layout_width="343dp"
        android:layout_height="289dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:adjustViewBounds="true"
        android:contentDescription="logo"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/doctorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/doctorButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:text="owner"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:background="@drawable/rounded_button_background"
        app:cornerRadius="30dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/patientButton"
        app:layout_constraintEnd_toEndOf="@+id/illustrationImageView"
        app:layout_constraintStart_toStartOf="@+id/illustrationImageView"
        app:layout_constraintTop_toBottomOf="@+id/illustrationImageView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/patientButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="user"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:background="@drawable/rounded_button_background"
        app:cornerRadius="30dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/doctorButton"
        app:layout_constraintStart_toStartOf="@+id/doctorButton"
        app:layout_constraintTop_toBottomOf="@+id/doctorButton" />

</androidx.constraintlayout.widget.ConstraintLayout>